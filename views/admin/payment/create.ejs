<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ../../partials/header.ejs %>
  </head>
  <body>
    <div class="wrapper">
      <!-- Preloader -->
      <div
        class="preloader flex-column justify-content-center align-items-center"
      >
        <img
          class="animation__shake"
          src="/adminlte/dist/img/AdminLTELogo.png"
          alt="AdminLTELogo"
          height="60"
          width="60"
        />
      </div>

      <%- include ../../partials/navbar.ejs %> <%- include
      ../../partials/sidebar.ejs %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Jenis Pembayaran</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item">
                    <a href="/payment">Jenis Pembayaran</a>
                  </li>
                  <li class="breadcrumb-item active">Tambah</li>
                </ol>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <!-- /.card -->
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Form Tambah Jenis Pembayaran</h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form action="/payment/create" method="POST">
                    <div class="card-body">
                      <div class="form-group">
                        <label for="name">Type</label>
                        <input
                          type="text"
                          class="form-control"
                          name="type"
                          id="type"
                          placeholder="Masukan tipe payment"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <label for="bankName">bank</label>
                        <div class="select2-purple">
                          <select
                            name="banks"
                            class="form-control select2"
                            multiple="multiple"
                            style="width: 100%"
                          >
                            <% banks.forEach(bank => { %>
                            <option value="<%= bank.id %>">
                              <%= bank.bankName %> - <%= bank.name %> - <%=
                              bank.noRekening %>
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">
                        Simpan
                      </button>
                    </div>
                  </form>
                </div>
                <!-- /.card -->
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
      </div>

      <%- include ../../partials/footer.ejs %>
    </div>

    <%- include ../../partials/js.ejs %>
  </body>
</html>
